generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:verben.db"
}

model verben {
  id          Int    @id @default(autoincrement())
  infinitiv   String @unique
  dritte_form String
  preteritum  String
  perfekt     String
  ubersatz    String
}
